<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.infinite.jsf.admin.model.Prescription" table="prescription">
        <id name="prescriptionId" column="prescription_id" type="string">
            <generator class="assigned"/>
        </id>

        <many-to-one name="procedure" class="com.infinite.jsf.admin.model.MedicalProcedure" column="procedure_id" not-null="true"/>
        <many-to-one name="recipient" class="com.infinite.jsf.admin.model.Recipient" column="h_id" not-null="true"/>
        <many-to-one name="provider" class="com.infinite.jsf.admin.model.Provider" column="provider_id" not-null="true"/>
        <many-to-one name="doctor" class="com.infinite.jsf.admin.model.Doctor" column="doctor_id" not-null="true"/>

        <property name="medicineName" column="medicine_name" type="string"/>
        <property name="dosage" column="dosage" type="string"/>
        <property name="duration" column="duration" type="string"/>
        <property name="notes" column="notes" type="text"/>
        <property name="writtenOn" column="written_on" type="timestamp"/>
        <property name="createdAt" column="created_at" type="timestamp"/>
    </class>
</hibernate-mapping>
