<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.infinite.jsf.admin.model.DoctorAvailability" table="Doctor_availability">
        <id name="availabilityId" column="availability_id" type="string">
            <generator class="assigned"/>
        </id>

        <many-to-one name="doctor" class="com.infinite.jsf.admin.model.Doctor" column="doctor_id" not-null="true"/>

        <property name="availableDate" column="available_date" type="date"/>
        <property name="startTime" column="start_time" type="time"/>
        <property name="endTime" column="end_time" type="time"/>
        <property name="slotType" column="slot_type" type="string"/>
        <property name="maxCapacity" column="max_capacity" type="integer"/>
        <property name="isRecurring" column="is_recurring" type="boolean"/>
        <property name="notes" column="notes" type="string"/>
        <property name="createdAt" column="created_at" type="timestamp"/>
    </class>
</hibernate-mapping>
