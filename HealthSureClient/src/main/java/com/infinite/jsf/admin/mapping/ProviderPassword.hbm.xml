<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.infinite.jsf.admin.model.ProviderPassword" table="Provider_password">
        <id name="resetId" column="reset_id" type="int">
            <generator class="increment"/>
        </id>

        <many-to-one name="provider" class="com.infinite.jsf.admin.model.Provider" column="provider_id" not-null="true"/>

        <property name="oldPassword" column="old_password" type="string"/>
        <property name="newPassword" column="new_password" type="string"/>
        <property name="resetTime" column="reset_time" type="timestamp"/>
    </class>
</hibernate-mapping>
