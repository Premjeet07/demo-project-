<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.infinite.jsf.provider.model.Account" table="Accounts">
        <id name="accountId" column="account_id" type="int">
            <generator class="increment"/>
        </id>

        <many-to-one name="provider" class="com.infinite.jsf.provider.model.Provider" column="provider_id" not-null="false"/>

        <property name="bankName" column="bank_name" type="string"/>
        <property name="ifscCode" column="ifsc_code" type="string"/>
        <property name="accountNumber" column="account_number" type="string"/>
        <property name="amountPaid" column="amount_paid" />
    </class>
</hibernate-mapping>
