<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
<session-factory>
<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/HealthSure</property>
<property name="hibernate.connection.username">root</property>
<property name="hibernate.connection.password">root</property>
<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
<property name="hibernate.connection.pool_size">10</property>
<property name="hibernate.show_sql">true</property>
<property name="hibernate.format_sql">true</property>
<property name="hibernate.hbm2ddl.auto">update</property>

<mapping resource="com/infinite/jsf/admin/mapping/Claim.hbm.xml"/>
<mapping resource="com/infinite/jsf/admin/mapping/Subscribe.hbm.xml"/>
<mapping resource="com/infinite/jsf/admin/mapping/Recipient.hbm.xml"/>
<mapping resource="com/infinite/jsf/admin/mapping/Provider.hbm.xml"/>
<mapping resource="com/infinite/jsf/admin/mapping/MedicalProcedure.hbm.xml"/>
<mapping resource="com/infinite/jsf/admin/mapping/ClaimHistory.hbm.xml"/>
<mapping resource="com/infinite/jsf/admin/mapping/InsuranceCoverageOption.hbm.xml"/>
<mapping resource="com/infinite/jsf/admin/mapping/PaymentHistory.hbm.xml" />
<mapping resource="com/infinite/jsf/admin/mapping/Account.hbm.xml" />
</session-factory>
</hibernate-configuration>